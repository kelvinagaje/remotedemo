--<ScriptOptions statementTerminator=";"/>

CREATE TABLE EMP_ENCODE (
		EMPNO NUMBER(4 , 0) NOT NULL,
		ENAME VARCHAR2(10),
		JOB VARCHAR2(9),
		MGR NUMBER(4 , 0),
		HIREDATE DATE,
		SAL NUMBER(7 , 2),
		COMM NUMBER(7 , 2),
		DEPTNO NUMBER(2 , 0)
	);

CREATE UNIQUE INDEX PK_EMP_ENCODE ON EMP_ENCODE (EMPNO ASC);

ALTER TABLE EMP_ENCODE ADD CONSTRAINT PK_EMP_ENCODE PRIMARY KEY (EMPNO);

ALTER TABLE EMP_ENCODE ADD CONSTRAINT FK_DEPTNO_ENCODE FOREIGN KEY (DEPTNO)
	REFERENCES DEPT (DEPTNO)
	ON DELETE RESTRICT
	ON UPDATE CASCADE;

